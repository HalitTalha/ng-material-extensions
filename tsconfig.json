{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true, // if you have decorators
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "cdk-table-exporter": [
        "dist/cdk-table-exporter"
      ],
      "cdk-table-exporter/*": [
        "dist/cdk-table-exporter/*"
      ],
      "mat-table-exporter": [
        "dist/mat-table-exporter"
      ],
      "mat-table-exporter/*": [
        "dist/mat-table-exporter/*"
      ],
      "mat-table-filter": [
        "dist/mat-table-filter"
      ],
      "mat-table-filter/*": [
        "dist/mat-table-filter/*"
      ],
      "example-components": [
        "dist/example-components"
      ],
      "example-components/*": [
        "dist/example-components/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
